{
  "name": "@wuxh/utils",
  "version": "1.2.0",
  "description": "工具集",
  "author": {
    "name": "Wxh16144",
    "email": "wxh16144@qq.com",
    "url": "https://github.com/wxh16144"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wxh16144/utils"
  },
  "keywords": [
    "utils",
    "typescript"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json",
    "./node": "./dist/node/index.mjs"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "vitest",
    "build": "tsdown",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "docs": "typedoc",
    "cm": "git-commit"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^24.3.1",
    "@vitest/coverage-v8": "3.2.4",
    "@wuxh/commitlint-config": "0.0.2",
    "@wuxh/commitzen-config": "0.0.3",
    "commitizen": "~4.3.1",
    "commitlint": "~19.8.1",
    "conventional-changelog-cli": "^5.0.0",
    "cz-customizable": "~7.5.1",
    "lint-staged": "^16.1.6",
    "release-it": "^15.6.0",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.15.0",
    "typedoc": "^0.28.12",
    "vitest": "^3.2.4"
  },
  "commitlint": {
    "extends": "@wuxh/commitlint-config"
  },
  "config": {
    "cz-customizable": {
      "config": "./node_modules/@wuxh/commitzen-config"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
